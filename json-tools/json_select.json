{
  "type": "object",
  "properties": {
    "json": {
      "type": "string",
      "description": "The raw JSON string or path to a JSON file (use @filepath)."
    },
    "query": {
      "type": "string",
      "description": "The jq query filter (e.g., '.users[].email' or '.status')."
